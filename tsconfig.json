{
  "extends": "code-style/tsconfig.json",
  "compilerOptions": {
    "pretty": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "allowJs": false,
    "noEmitOnError": true,
    "incremental": false,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typing",
      "./src/global.d.ts"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
     "node_modules",
  ]
}
